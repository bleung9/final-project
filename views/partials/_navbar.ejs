<!--Navbar -->
<%if (email) {%>
<nav class="navbar navbar-expand-lg fixed-top navbar-dark elegant-color-dark">
  <a class="navbar-brand" href="/">Roomer</a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent-555">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item"><a class="nav-link" href="/users/<%=id%>">Profile</a></li>
      <li class="nav-item"><a class="nav-link" href="/users/<%=id%>/inbox">Inbox</a></li>
    </ul>
    <ul class="navbar-nav ml-auto nav-flex-icons">
      <li>
        <form method="POST" action="/logout">
          <button class="btn btn-primary btn-sm">Logout</button>
        </form>
      </li>
    </ul>
  </div>
</nav>
<%} else {%>
<nav class="navbar navbar-expand-lg fixed-top navbar-dark elegant-color-dark">
  <a class="navbar-brand" href="/">Roomer</a>
  <div class="collapse navbar-collapse" id="navbarSupportedContent-555">
    <ul class="navbar-nav mr-auto">
    </ul>
    <ul class="navbar-nav ml-auto nav-flex-icons">
      <li>
        <button class="btn btn-primary btn-sm" data-open="login">Login</button>
        <div class="reveal" id="login" data-reveal>
          <form method="POST" action="/login">
            <h4 class="text-center">Login to Roomer</h4>
            <hr>
            <div class="login">
                <form method="post">
                  <input type="text" placeholder="Email" required="required" />
                  <input type="password" placeholder="Password" required="required" />
                  <button type="submit" class="btn btn-primary btn-block" value="Login">Login</button>
                </form>
              </div>
              <hr>
            <p>Need an account? Register for Roomer now! <a href="/register">Register now</a></p>
          </form>
          <button class="close-button" data-close aria-label="Close modal" type="button">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </li>
      <li>
        <form method="GET" action="/register">
          <button class="btn btn-primary btn-sm">Register</button>
        </form>
      </li>
    </ul>
  </div>
</nav>
<%}%>
<!--Navbar -->